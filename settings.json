{
  "editor.fontFamily": "'Victor Mono', monospace",
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.detectIndentation": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 140,

  "security.workspace.trust.enabled": false,

  "scm.diffDecorationsGutterWidth": 5,
  "scm.diffDecorationsGutterVisibility": "always",

  // PHP
  "editor.quickSuggestions": false,
  "php.suggest.basic": false,
  "php.validate.run": "onType",
  "php-cs-fixer.rules": "@PhpCsFixer",
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.formatOnSave": true
  },

  // RUBY
  // "[ruby]": {
  //     "editor.defaultFormatter": "mbessey.vscode-rufo",
  //     "editor.formatOnSave": true
  // },
  // "rufo.exe": "/home/elise/.gem/bin/rufo", // can be an absolute path
  // "rufo.useBundler": false
  // "ruby.rubocop.executePath": "/home/elise/.rbenv/shims/",
  "ruby.rubocop.onSave": false,
  //   "ruby.rubocop.useBundler": false, // cannot use from docker

  //GO
  "go.formatTool": "gofmt",
  "go.toolsManagement.autoUpdate": true,

  // GIT
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.blame.avatars": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.format": "${author, }${date}${' via 'pullRequest}${ â€¢ message|50?}",
  "gitlens.defaultDateFormat": "YY-MM-DD HH:mm",
  "gitlens.defaultDateShortFormat": "YY-MM-DD",
  "gitlens.defaultTimeFormat": " HH:mm",
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.enabled": false,

  /// etc
  "files.autoSave": "onWindowChange",
  "explorer.confirmDelete": false,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "launch": {
    "configurations": [],
    "compounds": []
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.detectIndentation": false
  },

  "explorer.confirmDragAndDrop": false,
  "files.trimTrailingWhitespace": true,

  "html.format.wrapLineLength": 200,
  "prettier.printWidth": 200,
  "python.formatting.provider": "autopep8",
  "rainbow_csv.autodetection_min_line_count": 2,
  "rainbow_csv.csv_lint_detect_trailing_spaces": true,
  "redhat.telemetry.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.colorTheme": "CRT Paper",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.tree.indent": 12,
  "gitlens.blame.format": "${author|10?} ${message|10?} ${agoOrDate|14-}",
  "gitlens.blame.compact": false,
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },
  "gitlens.menus": false,
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": false,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "ruby": false,
    "jsonc": false
  },

  /// COLOR THEME

  "editor.tokenColorCustomizations": {
    "functions": "#000",
    "comments": "#aaa",
    "keywords": "#000",
    "numbers": "#555",
    "strings": "#555",
    "types": "#000",
    "variables": "#888",
    "textMateRules": [
      {
        "scope": ["comment", "string"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#83c52d",
    "editorBracketHighlight.foreground2": "#35b8ad",
    "editorBracketHighlight.foreground3": "#6f55ce",
    "editorBracketHighlight.foreground4": "#b83db8",
    "editorBracketHighlight.foreground5": "#ce502a",

    // git
    "editorGutter.addedBackground": "#0be779",
    "editorGutter.modifiedBackground": "#df9d0d",
    "editorGutter.deletedBackground": "#cc0101",
    "merge.incomingContentBackground": "#9ccfb7",
    "merge.currentContentBackground": "#bc9de0",

    "tab.activeBorderTop": "#9ff500",
    // "activityBar.border": "#333333",

    // "minimap.selectionHighlight": "#333333",
    // "editor.selectionBackground": "#cccccc",
    // "editor.selectionHighlightBorder": "#333333",

    "editorError.foreground": "#be0606",
    "editorError.border": "#be0606",

    "editorWarning.foreground": "#e2ac15",
    "editorWarning.border": "#e2ac15",

    "editorInfo.foreground": "#555555",
    "editorInfo.border": "#555555ff"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "gitlens.statusBar.enabled": false,
  "gitlens.blame.highlight.locations": ["overview", "gutter", "line"]
}
